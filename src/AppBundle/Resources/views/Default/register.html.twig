{% extends "::base.html.twig" %}

{% block javascripts %}
    {% spaceless %}
        <script src="{{asset('js/jquery-2.1.4.min.js')}}"></script>
        <script src="{{asset('js/bootstrap.min.js')}}"></script>
    {% endspaceless %}
{% endblock javascripts %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/bootstrap.min.css')}}" />
    <link rel="stylesheet" href="{{asset('css/bootstrap-theme.css')}}" />
{% endblock stylesheets %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8" style="margin-top:140px;">
                <form class="form-horizontal" method="post" action="{{path('register_check')}}">
                    <div class="form-group">
                        <label for="email" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input id="email" type="email" class="form-control" name="email" placeholder="Email" required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nickname" class="col-sm-2 control-label">Nickname</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="nickname" name="nickname" placeholder="Ricky" required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock body%}